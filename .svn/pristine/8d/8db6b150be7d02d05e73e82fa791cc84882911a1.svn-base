								<li>
									<span>
										<i></i>
										会员卡号自动生成
									</span>
									<el-switch
										v-model="ruleForm.autogenvipcode"
										active-color="#rgb(251, 120, 154)"
										inactive-color="##9E9E9E"
										class="pull-right"
									></el-switch>
								</li>

								<li>
									<span>
										<i></i>
										销售员必选
									</span>
									<el-switch
										v-model="ruleForm.isneedsaler"
										active-color="#rgb(251, 120, 154)"
										inactive-color="##9E9E9E"
										class="pull-right"
									></el-switch>
								</li>

								<li>
									<span>
										<i></i>
										消费结账允许选择销售日期
									</span>
									<el-switch
										v-model="ruleForm.AllowSaleDate"
										active-color="#rgb(251, 120, 154)"
										inactive-color="##9E9E9E"
										class="pull-right"
									></el-switch>
								</li>

								<li>
									<span>
